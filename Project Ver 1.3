from tkinter import *

def main_scrn():

    global main
    main = Tk()
    main.geometry("600x500+650+275")
    main.title("Student Portal")
    main.configure(bg="#1B262C")


    lbl = Label(text="Welcome to Student Portal", fg="#994D1C", bg="#1B262C", height=1, width=25, font=("Helvetica", 30, "bold"))
    lbl.place(x = 1, y = 20)

    btn = Button(text="Login Account", fg="#E48F45", bg="#0F4C75", height=2, width=20, bd=5, font=("Helvetica", 15, "bold"), command = log_scrn)
    btn.place(x=180, y=100)

    btn = Button(text="Create Account", fg="#E48F45", bg="#0F4C75", height=2, width=20, bd=5, font=("Helvetica", 15, "bold"))
    btn.place(x=180, y=200)

    btn = Button(text="Update Account", fg="#E48F45", bg="#0F4C75", height=2, width=20, bd=5, font=("Helvetica", 15, "bold"))
    btn.place(x=180, y=300)

    btn = Button(text="Delete Account", fg="#E48F45", bg="#0F4C75", height=2, width=20, bd=5, font=("Helvetica", 15, "bold"))
    btn.place(x=180, y=400)


    main.resizable(False, False)
    main.mainloop()


def log_scrn():

    global log
    log = Toplevel(main)
    log.geometry("600x500+650+275")
    log.title("Login Account")
    log.configure(bg="#1B262C")

    lbl = Label(log, text="Login Account", fg="#994D1C", bg="#1B262C", height=1, width=12, font=("Helvetica", 40, "bold"))
    lbl.place(x=116, y=20)

    lbl = Label(log, text="Enter Student Number:", fg="#E48F45", bg="#1B262C", font=("Helvetica", 13, "bold"))
    lbl.place(x=220, y=150)

    txtfld = Entry(log, fg="#E48F45", bg="White", bd=3.5, font=("Helvetica", 15))
    txtfld.place(x=195, y=200)

    lbl = Label(log, text="Enter password:", fg="#E48F45", bg="#1B262C", font=("Helvetica", 13, "bold"))
    lbl.place(x=240, y=280)

    txtfld = Entry(log, fg="#E48F45", bg="White", bd=3.5, font=("Helvetica", 15))
    txtfld.place(x=195, y=330)

    btn = Button(log, text="       Log In       ", fg="#E48F45", bg="#0F4C75", bd=3.5, font=("Helvetica", 13, "bold"))
    btn.place(x=130, y=400)

    btn = Button(log, text="        Back         ", fg="#E48F45", bg="#0F4C75", bd=3.5, font=("Helvetica", 13, "bold"))
    btn.place(x=330, y=400)


    log.resizable(False, False)
    main.withdraw()

main_scrn()
